<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainThemeColor"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.darvesh.splashscreen.ProfileActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/seller_profile_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/buyers_profile"
            card_view:civ_border_width="2dp"
            card_view:civ_border_color="#FFF"
            android:layout_marginTop="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/seller_profile_image"
            android:layout_toEndOf="@+id/seller_profile_image"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:textColor="#fff"
            android:textSize="30sp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/seller_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginStart="220dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text=""
            android:id="@+id/seller_rating_show" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/give_rating"
            android:layout_alignStart="@+id/seller_profile_image"
            android:layout_below="@+id/seller_profile_image"
            android:layout_marginTop="101dp" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seller_rating_show"
            android:layout_alignStart="@+id/seller_profile_image"
            android:layout_marginTop="110dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#fff"
            android:textSize="25sp"
            android:id="@+id/textView5" />

        <Button
            android:text="Send Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/send_messsage_to_seller"
            android:padding="12dp"
            android:background="@drawable/shadow_search"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="32dp" />

    </RelativeLayout>


</ScrollView>