<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainThemeColor"
    tools:context="com.example.darvesh.splashscreen.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Item"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="34dp"
            android:layout_margin="18dp"
            android:fontFamily="sans-serif-medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="New Product Name"
                android:ems="10"
                android:id="@+id/product_name"
                android:background="@drawable/theme1"
                android:padding="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#D32F2F"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="New Location"
                android:focusable="false"
                android:ems="10"
                android:id="@+id/location"
                android:background="@drawable/theme1"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#D32F2F"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="New Category"
                android:ems="10"
                android:id="@+id/select_category"
                android:background="@drawable/theme1"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#D32F2F"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="New Price"
                android:ems="10"
                android:id="@+id/item_price"
                android:background="@drawable/theme1"
                android:padding="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:textColor="#D32F2F"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:id="@+id/submit_ad"
                android:textColor="#fff"
                android:background="@drawable/theme2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:text="Save Changes"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

